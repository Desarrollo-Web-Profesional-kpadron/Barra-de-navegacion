# Etapa 1: Build
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Etapa 2: Nginx
FROM nginx:stable-alpine

COPY --from=build /app/dist /usr/share/nginx/html

# ðŸ‘‡ Esta lÃ­nea ahora sÃ­ se usa
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
